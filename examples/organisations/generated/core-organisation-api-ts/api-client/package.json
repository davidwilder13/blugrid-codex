{
  "name": "@blugrid/organisation-api-client",
  "version": "0.0.1",
  "description": "API client for Organisation",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:contract": "vitest run --testNamePattern='Contract'",
    "test:integration": "vitest run --testNamePattern='Integration'"
  },
  "dependencies": {
    "@blugrid/organisation-types": "workspace:*"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.0",
    "msw": "^2.4.0",
    "testcontainers": "^10.13.0",
    "@testcontainers/postgresql": "^10.13.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@jdl/*": ["jdl/*"],
      "@templates/*": ["templates/*"],
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
